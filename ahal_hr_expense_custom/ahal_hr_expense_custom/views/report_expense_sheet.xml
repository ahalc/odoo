<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="ahal_hr_report_expense_sheet_id" model="ir.ui.view">
    <field name="name">ahal.hr.report.expense.sheet.id</field>
    <field name="model">hr.expense.sheet</field>
    <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
    <field name="arch" type="xml">      
      <xpath expr="//button[@name='action_submit_sheet']" position="after">
        <button name="import_zip_file" string="Importar archivo zip" type="object" class="oe_highlight" />                    
      </xpath>
       <xpath expr="//notebook" position="inside">
        <page string="Facturas de proveedor">        
            <field name="invoice_ids">
              <tree editable="bottom" create="0" delete="0">               
                  <field name="name" />                  
                  <field name="partner_id" />
                  <field name="invoice_date" />
                  <field name="state" />                  
                  <field name="amount_total" />
                  <field name="uuid_xml" />
                  <field name="company_id" invisible="1" />                  
              </tree>           
            </field>   
        </page>
      </xpath>
    </field>
  </record>
</odoo>