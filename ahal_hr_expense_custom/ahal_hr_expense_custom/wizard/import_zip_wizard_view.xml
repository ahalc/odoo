<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="import_zip_wizard_form_view" model="ir.ui.view">
        <field name="name">import.zip.wizard.form.view</field>
        <field name="model">import.zip.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar archivo ZIP">
                <sheet>
                    <group>
                        <field name="file_name" invisible="1"/>
                        <field name="file_file" filename="file_name" />
                        <field name="msg" readonly="True" attrs="{'invisible':[('msg','=',False)]}"/>
                    </group>
                    <field name="line_ids">
                        <tree editable="bottom" create="0" delete="1">               
                            <field name="file_name" />
                            <field name="file_file" filename="file_name" string="TamaÃ±o" />                                  
                        </tree>           
                    </field>   
                </sheet>
                <footer>
                    <button name="action_create_invoices" string="Crear facturas" type="object" class="oe_highlight" />                    
                    <button special="cancel" string="Cerrar" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="import_zip_wizard_action" model="ir.actions.act_window">
        <field name="name">Importar archivo zip</field>
        <field name="res_model">import.zip.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="import_zip_wizard_form_view"/>
        <field name="target">new</field>
        <field name="context">{'msg':False}</field>
    </record> 

</odoo>
